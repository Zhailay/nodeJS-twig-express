{% extends "pages/base.twig" %}
{% block title %}Новости и объявления - Студент{% endblock %}
{% block css %} {% endblock %}
{% block breadcrumb %}
<li class="text-sm pl-2 capitalize leading-normal text-white before:float-left before:pr-2 before:text-white before:content-['/']">Новости и объявления</li>
{% endblock %}
{% block current_title %} Новости и объявления {% endblock %}
{% block jurnal %}
<div
    class="relative flex flex-col flex-auto min-w-0 p-4 mx-2 overflow-hidden break-words bg-white border-0 dark:bg-slate-850 dark:shadow-dark-xl shadow-3xl rounded-2xl bg-clip-border">
    <div class="flex-none w-full max-w-full px-3 mt-6">
        <div
            class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border">
            <div class="p-4 pb-0 mb-0 rounded-t-2xl">
                <ul class="flex flex-wrap text-sm font-medium text-center text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400">
                {% for info in category_list %}
                    <li class="mr-2">
                        <a id="{{info.post_news_category_id}}" class="inline-block p-2 rounded-t-lg hover:text-gray-600 hover:bg-gray-50 dark:hover:bg-gray-800 dark:hover:text-gray-300 journal-tab journal-active-tab">{{info.post_news_category_name}}</a>
                    </li>
                {% endfor %}
                </ul>
            </div>
            <div class="flex-auto p-4">
                <div id="news_list" class="flex flex-wrap -mx-3">

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="/js/news.js"></script>{% endblock %}